<div class="container d-flex justify-content-center">
  <div class="login-box">
    <div class='welcome-div'>
      <h1>Create Account</h1>
    </div>
    <div class='form-container'>
      <form id='form-create' autocomplete='off'>
        <div class='column mb-3'>
          <label for='firstname-input' class='col-sm-2 col-form-label'>First Name</label>
          <div class='col-sm-10'>
            <input type='input' class='form-control' id='firstname-input' />
          </div>
        </div>

        <div class='column mb-3'>
          <label for='email-input' class='col-sm-2 col-form-label'>Email</label>
          <div class='col-sm-10'>
            <input type='email' class='form-control' id='email-input' placeholder="example@gmail.com"
              autocomplete="off" />
          </div>
        </div>
        <div class='column mb-3'>
          <label for='password-input' class='col-sm-2 col-form-label'>Password</label>
          <div class='col-sm-10'>
            <input type='password' class='form-control' id='password-input' autocomplete="off" />
          </div>
        </div>

        <button type='submit' class='btn btn-outline-primary goal-button'>Submit</button>

      </form>
    </div>
  </div>
</div>

